{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/navigation/*": [
        "./src/components/navigation/*"
      ],
      "@/cards/*": [
        "./src/components/cards/*"
      ],
      "@/auth/*": [
        "./src/lib/db/auth/*"
      ],
      "@/store/*": [
        "./src/lib/store/*"
      ],
      "@/hooks/*": [
        "./src/lib/hooks/*"
      ],
      "@/Tables/*": [
        "./src/components/tables/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
